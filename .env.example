# .env.example
# 프로젝트를 실행하기 위해 필요한 환경 변수 예시입니다.
# 이 파일을 .env로 복사하여 실제 값을 채워넣으세요.
# .env 파일은 Git에 커밋되지 않도록 .gitignore에 추가되어 있습니다.

# OpenAI API Key
OPENAI_API_KEY="sk-YOUR_OPENAI_API_KEY_HERE"

# DeepL API Key (선택 사항, 번역 서비스 사용 시)
DEEPL_API_KEY="YOUR_DEEPL_API_KEY_HERE"

# ChromaDB 경로 (벡터 데이터베이스 저장 위치)
# build_rag_db.py 스크립트와 analysis_service.py에서 사용됩니다.
CHROMA_DB_PATH="./data/vector_store"

# DALL-E 이미지 생성 설정
DALL_E_IMAGE_SIZE="1024x1024" # "256x256", "512x512", "1024x1024"
DALL_E_IMAGE_QUALITY="standard" # "standard", "hd"

# Whisper 모델 설정 (OpenAI API 모델명)
WHISPER_MODEL_NAME="whisper-1" # 또는 로컬 모델 경로/이름 (예: "base")

# RAG 관련 설정
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# 프로젝트 정보 (선택 사항)
PROJECT_NAME="My Dream Project"
PROJECT_VERSION="0.1.0"
ENVIRONMENT="development"